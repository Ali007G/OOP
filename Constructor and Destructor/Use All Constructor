#include<bits/stdc++.h>
#include<iostream>
using namespace std;

class Student {
private:
    string FirstName;
    string LastName;
    int id;
    string dept;

public:
    Student()  // default constructor
    {
        cout<< "This is Default Constructor"<<endl;
        cout<< "Student class created..."<<endl;
        cout<<endl;
    }

    Student(string a, string b, int c, string d) // parameter constructor
    {
        cout<< "This is Parameter Constructor"<<endl;
        FirstName = a;
        LastName = b;
        id = c;
        dept = d;
        cout<<"Student name is: "<<FirstName<<LastName<<endl;
        cout<<"Id: " << id<<endl;
        cout<<"Department: "<< dept<<endl << endl;
    }
    //Student(string, string, int, string);
    Student(Student &t)          // copy constructor
    {
        cout<< "This is Copy Constructor"<<endl;
        cout<<"Student Information: "<<endl;
        FirstName=t.FirstName;
        LastName=t.LastName;
        id=t.id;
        dept=t.dept;
    }
    void display()
    {
        cout<<"Student Name is: "<<FirstName<<LastName<<endl;
        cout<<"ID: "<<id<<endl;
        cout<<"Department: "<<dept<<endl;
        cout<<endl;
    }
    ~Student()
    {
        cout<<"Destructor Called"<<endl;
    }
};

int main()
{
    Student obj1;

    Student obj2("Golam", " Ali", 22, "CSE");
    Student obj3(obj2);
    obj3.display();
}



